<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <ImageView
        android:id="@+id/ivProductoImagen"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="centerCrop"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" /> <TextView
    android:id="@+id/tvNombreProducto"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="16dp"
    android:textSize="18sp"
    android:textStyle="bold"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toEndOf="@id/ivProductoImagen"
    app:layout_constraintTop_toTopOf="@id/ivProductoImagen"
    tools:text="Nombre del Producto" /> <TextView
    android:id="@+id/tvPrecioProducto"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:textColor="@android:color/holo_green_dark"
    app:layout_constraintStart_toStartOf="@id/tvNombreProducto"
    app:layout_constraintTop_toBottomOf="@id/tvNombreProducto"
    tools:text="$120.00" /> <TextView
    android:id="@+id/tvCantidad"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginTop="8dp"
    android:textStyle="italic"
    app:layout_constraintStart_toStartOf="@id/tvNombreProducto"
    app:layout_constraintTop_toBottomOf="@id/tvPrecioProducto"
    tools:text="Cantidad: 2" /> </androidx.constraintlayout.widget.ConstraintLayout>